{
	"compilerOptions": {
    /* - - Base Options - - */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    // "forceConsistentCasingInFileNames": true,

	/* -- Strictness --*/
	"strict": true,


	/* -- Node options --*/
	"moduleResolution": "NodeNext",
    "module": "NodeNext",
    "outDir": "./dist/src",
    "sourceMap": true,
    "lib": ["es2022"],

	"baseUrl": ".",
	"paths": {
		"@/*": ["src/*"]
		},
	},
    "typeRoots": ["./src/types"],
	"include": ["./src/**/*", "./src/types"], // Specifies which files to include when compiling your project.
	"exclude": ["node_modules", "**/*.spec.ts"] // Specifies which files to exclude when compiling your project.
}


